<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PopupActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rulesbg" />

    <TextView
        android:id="@+id/message1"
        android:layout_width="292dp"
        android:layout_height="84dp"
        android:fontFamily="@font/vt323"
        android:text="1. Select the type of crust you want 2. Select a sauce on top of your pizza 3. Choose a meat toppings to finish your pizza "
        android:textAlignment="textStart"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.489"
        app:lineHeight="20dp"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <TextView
        android:id="@+id/message5"
        android:layout_width="409dp"
        android:layout_height="31dp"
        android:fontFamily="@font/vt323"
        android:text="--------------------------------------------"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.225"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <TextView
        android:id="@+id/rules"
        android:layout_width="106dp"
        android:layout_height="45dp"
        android:fontFamily="@font/vt323"
        android:text="RULES"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <TextView
        android:id="@+id/message4"
        android:layout_width="409dp"
        android:layout_height="31dp"
        android:fontFamily="@font/vt323"
        android:text="--------------------------------------------"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.294"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <TextView
        android:id="@+id/message3"
        android:layout_width="293dp"
        android:layout_height="27dp"
        android:fontFamily="@font/vt323"
        android:text="(Remember to choose 1 ingredient on every section)"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.582"
        app:lineHeight="20dp"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <TextView
        android:id="@+id/message2"
        android:layout_width="151dp"
        android:layout_height="32dp"
        android:fontFamily="@font/vt323"
        android:text="Happy Cooking!"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.646"
        app:lineHeight="20dp"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <Button
        android:id="@+id/closeBtn"
        android:layout_width="61dp"
        android:layout_height="48dp"
        android:backgroundTint="#000000"
        android:text="X"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.723"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/message"
        android:layout_width="409dp"
        android:layout_height="31dp"
        android:fontFamily="@font/vt323"
        android:text="--------------------------------------------"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.774"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <TextView
        android:id="@+id/message6"
        android:layout_width="288dp"
        android:layout_height="66dp"
        android:fontFamily="@font/vt323"
        android:text="Welcome to Adam's pizzeria Your goal for today is to finish up your pizza with the remaining add-ons. "
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.357"
        tools:ignore="HardcodedText,TextSizeCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>